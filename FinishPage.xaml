<Page x:Class="UFTools.FinishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UFTools"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="FinishPage">

    <Grid>
        <Button Content="回到首页" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Bottom" Width="75" Style="{DynamicResource ButtonPrimary}" Click="Button_Click"/>
        <Grid HorizontalAlignment="Center" Height="58" VerticalAlignment="Top" Margin="0,100,0,0">
            <fa:ImageAwesome Icon="Check" VerticalAlignment="Center" HorizontalAlignment="Left" Height="40" Width="40" Foreground="{DynamicResource ResourceKey=SuccessBrush}" Margin="0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="替换完成" VerticalAlignment="Center" FontSize="30" Foreground="{DynamicResource SuccessBrush}" Margin="50,0,0,0"/>
        </Grid>
    </Grid>
</Page>
